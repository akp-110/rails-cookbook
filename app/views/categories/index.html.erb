<div class="banner" style="background-image: url('<%= image_path("banner.jpg") %>')">
  <div>
    <h1><strong>Cookbook</strong></h1>
    <h3>Save your favourite recipes</h3>
  </div>
</div>

<div class="container w-75">
  <div class="info-top">
    <h2>Categories<h2>
    <%= link_to "New Category", new_category_path, class: "btn btn-flat"%>
</div>

<div class="cards">
  <% @categories.each do |category| %>
  <% recipe_image = category.bookmarks.first&.recipe&.image_url %>

     <%= link_to category_path(category) do %>
      <div class= "card-category" style="background-image: url('<%= recipe_image%>')">
        <div>
          <h3><%= category.name %></h3>
            <p><%= category.bookmarks.count %> recipes </p>
            </div>
          </div>
     <% end %>


  <% end %>
  </div>

</div>
