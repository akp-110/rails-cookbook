<div class="form-new">
<h1>Add a recipe to <%=@category.name %> category</h1>
<%= simple_form_for [@category, @bookmark] do |f|%>
<%= f.input :comment %>
<%= f.association :recipe %>
<%= f.submit class: "btn btn-flat" %>
<% end %>
</div>

<%= link_to category_path(@category), class: "btn btn-flat" %>
